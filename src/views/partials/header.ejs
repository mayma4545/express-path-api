    <main class="container">
        <% if (typeof messages !== 'undefined' && messages.length > 0) { %>
            <div class="messages">
                <% messages.forEach(function(msg) { %>
                    <div class="alert alert-<%= msg.type %>">
                        <%= msg.message %>
                        <button class="close-btn" onclick="this.parentElement.remove()">√ó</button>
                    </div>
                <% }); %>
            </div>
        <% } %>
