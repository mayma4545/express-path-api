<%- include('partials/header', { title: 'Delete Edge - Campus Navigation' }) %>

<div class="confirm-delete">
    <h1>⚠️ Delete Edge</h1>
    <div class="alert alert-warning">
        <p>Are you sure you want to delete this edge?</p>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="edge-details">
        <p><strong>ID:</strong> <%= edge.id %></p>
        <p><strong>From:</strong> <%= edge.from_node ? edge.from_node.name : 'Unknown' %></p>
        <p><strong>To:</strong> <%= edge.to_node ? edge.to_node.name : 'Unknown' %></p>
        <p><strong>Distance:</strong> <%= edge.distance ? edge.distance.toFixed(2) + ' m' : 'N/A' %></p>
        <p><strong>Compass Angle:</strong> <%= edge.compass_angle ? edge.compass_angle.toFixed(1) + '°' : 'N/A' %></p>
    </div>

    <form action="/edges/<%= edge.id %>/delete" method="POST" class="delete-form">
        <button type="submit" class="btn-danger">Yes, Delete Edge</button>
        <a href="/edges" class="btn-secondary">Cancel</a>
    </form>
</div>

<%- include('partials/footer') %>
