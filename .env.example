# .env.example - Template for environment variables
# Copy this to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (REQUIRED - generate a strong random string)
SESSION_SECRET=your-secret-key-change-this-in-production

# MySQL Database Configuration (Aiven.io or any MySQL server)
DB_HOST=your-mysql-host.aivencloud.com
DB_PORT=11343
DB_NAME=defaultdb
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_SSL=true
# DB_CA_CERT - SSL Certificate for secure database connection
# Paste your certificate content with newlines replaced by \n
# Example: DB_CA_CERT="-----BEGIN CERTIFICATE-----\nMIIE...\n-----END CERTIFICATE-----"
DB_CA_CERT=

# Cloudinary Configuration (REQUIRED for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp
